      <section class="heroHome">
        <div class="layout">
          <div class="content">
            <img src="/public/images/bigStar.svg" alt="Star" />
            <div class="title tcap">
              <!-- <span> <%= __("vibrer") %></span>
              <br />
              <%= __("singing_contest") %> -->
              <span> Vibrer</span>
              <br />
              Singing Contest
            </div>
            <div class="sub">
              Unleash Your Inner Vocal Star, Participate, Earn Public Votes, and
              Win a Reward of 5000 Euros, public voting will start from 1st
              March 2024.
            </div>
            <div class="cta">
              <button class="btn btn-primary" onclick="toContest();">
                View Contest
              </button>
