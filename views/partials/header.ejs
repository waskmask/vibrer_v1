<!-- <header class="<%= (path !== '/') ? 'bg-dark' : '' %>"> -->
<header class="bg-dark">
  <nav class="layout">
    <!-- Logo tes -->
    <% if (path !== '/') { %>
    <div class="logo" onclick="toHome()">
      <img src="/public/images/vibrer_icon.svg" alt="Logo" />
    </div>
    <% } else { %>
    <div class="logo">
      <img src="/public/images/vibrer_icon.svg" alt="Logo" />
    </div>
    <% } %>

    <div class="burger">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>

    <div class="menu-overlay"></div>
    <div class="menu">
      <div class="menu-close">+</div>

      <ul>
        <li>
          <a
            class="<%= (path == '/') ? 'active' : '' %>"
            href="<%= (path == '/') ? 'javascript:void(0)' : '/' %>"
          >
            <%= __("Home") %>
          </a>
        </li>
        <li>
          <a
            class="<%= (path == '/road-map') ? 'active' : '' %>"
            href="<%= (path == '/road-map') ? 'javascript:void(0)' : '/road-map' %>"
            ><%= __("road_map") %></a
          >
        </li>
        <li>
          <a
            class="<%= (path == '/contests') ? 'active' : '' %>"
            href="<%= (path == '/contests') ? 'javascript:void(0)' : '/contests' %>"
            ><%= __("contests") %></a
          >
        </li>
        <li>
          <a
            class="<%= (path == '/Allprojects') ? 'active' : '' %>"
            href="<%= (path == '/Allprojects') ? 'javascript:void(0)' : '/projects' %>"
            ><%= __("projects") %></a
          >
        </li>
      </ul>
    </div>
    <div class="hcta">
      <div class="languageSwitcher me-1">
        <div class="toggle">
          <img src="/public/flags/en.svg" alt="flag" />
        </div>
        <div class="dropdown">
          <div class="item" data-value="en">
            <img src="/public/flags/gb.svg" alt="flag" />
            <span><%= __("English") %></span>
          </div>
          <div class="item" data-value="fr">
            <img src="/public/flags/fr.svg" alt="flag" />
            <span><%= __("French") %></span>
          </div>
          <div class="item" data-value="de">
            <img src="/public/flags/de.svg" alt="flag" />
            <span><%= __("German") %></span>
          </div>
          <div class="item" data-value="it">
            <img src="/public/flags/it.svg" alt="flag" />
            <span><%= __("Italian") %></span>
          </div>
          <div class="item" data-value="pt">
            <img src="/public/flags/pt.svg" alt="flag" />
            <span><%= __("Portuguese") %></span>
          </div>
          <div class="item" data-value="tr">
            <img src="/public/flags/tr.svg" alt="flag" />
            <span><%= __("Turkish") %></span>
          </div>
        </div>
      </div>
      <% if (typeof profileData !== 'undefined' && profileData) { %>
      <button class="btn btn-primary" onclick="toLogin()">App</button>

      <% } else { %>
      <button class="btn btn-outlined" onclick="toRegister()">
        <%= __("sign_up")%>
      </button>
      <button class="btn btn-primary" onclick="toLogin()">
        <%= __("login")%>
      </button>

      <% } %>
    </div>
  </nav>
</header>
