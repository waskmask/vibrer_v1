  <body class="body-dark _pr">
    <!-- loader -->
    <!-- <%- include('../partials/loader'); %> -->

    <% if (loggedIn) { %>
    <!-- header -->
    <%- include('./partials/pre-header'); %> <% } %>

    <main class="app_layout app_wrapper">
      <!-- main body of the app -->
      <div class="app_main preMain" style="max-width: 500px">
        <section class="contest-header" style="padding: 1.5rem">
          <div class="wrapper" style="position: relative; z-index: 2">
            <div>
              <div class="sponsor">
                <img src="/public/images/mod_light.svg" alt="Logo" />
                <div>MOD presents</div>
              </div>
              <div class="title mb-0">
                <%- entryData.result.contest.title %>
              </div>
            </div>
          </div>
        </section>
        <div class="goback dfac mt-3" onclick="toAppContest()">
          <img
            class="icon"
            src="/public/images/icons/arrow-left.svg"
            alt="icon"
          />

          <div class="link_text">Visit contest / view all entries</div>
        </div>
        <section class="participants" style="padding-top: 20px">
          <div class="contestant mb-3">
            <div class="report_dd">
              <img
                src="/public/images/icons/info_icon.svg"
                alt="Report"
                class="reportIcon"
              />
              <div class="drop_down shadow">
                <div class="report_link" data-id="1234125" data-from="contests">
                  Report
                </div>
              </div>
            </div>
            <div class="head">
              <div
                class="yourVote<%- entryData.result.contest._id %>"
                id="yourVote<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
              >
                <% let alreadyVotedValue = ""; %> <% if(alreadyVoted){
                alreadyVotedValue = entryData.result.user._id;%>
                <div class="yourVote">You voted</div>
                <% } %>
              </div>
              <video
                controls
                class="video-js"
                preload="auto"
                width="640"
                height="264"
                data-setup="{}"
              >
                <source src="<%- entryData.result.media %>" type="video/mp4" />
                <p class="vjs-no-js">
                  To view this video please enable JavaScript, and consider
                  upgrading to a web browser that
                  <a
                    href="https://videojs.com/html5-video-support/"
                    target="_blank"
                    >supports HTML5 video</a
                  >
                </p>
              </video>
              <!-- <img src="/public/images/icons/playIconWhite.svg" alt="Icon" /> -->

              <input
                type="text"
                class="form-input"
                id="alreadyVoted<%- entryData.result.contest._id %>"
                value="<%- alreadyVotedValue %>"
              />
            </div>
            <div class="body">
              <div class="top">
                <div class="user">
                  <div class="img">
                    <% if (entryData.result.user.profile_img === '') { %>
                    <img
                      src="/public/images/default-avatar.png"
                      alt="Default Avatar"
                    />
                    <% } else { %>
                    <img
                      src="<%- entryData.result.user.profile_img %>"
                      alt="avatar"
                    />
                    <% } %>
                  </div>
                  <div class="info">
                    <div class="title">
                      <span><%- entryData.result.user.full_name %></span>
                      <% if(entryData.result.user.verified){ %>
                      <img
                        src="/public/images/icons/verified-badge.svg"
                        alt="Badge"
                      />
                      <% } %>
                    </div>
                    <div class="uname">
                      @<%- entryData.result.user.username %>
                    </div>
                  </div>
                </div>

                <div class="addToFav">
                  <a
                    href="javascript:void(0)"
                    id="favouriteBtn<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
                    onclick="addParticipateToFavourite('<%- entryData.result.contest._id %>', '<%- entryData.result.user._id %>');"
                  >
                    <% if(entryData.result.is_favourite){ %>
                    <img
                      src="/public/images/icons/bookmark1.svg"
                      alt="Bookmark"
                      id="favouriteIcon<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
                    />
                    <% } else { %>
                    <img
                      src="/public/images/icons/bookmark.svg"
                      alt="Bookmark"
                      id="favouriteIcon<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
                    />
                    <% } %>
                  </a>
                </div>
              </div>

              <div class="votes">
                <div class="count">
                  <strong><%-__('votes')%></strong>
                  <span
                    id="countVotes<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
                  >
                    <%- entryData.result.votes.length %>
                  </span>
                </div>
                <div class="rank">
                  <strong>Current Rank:</strong>
                  <% if(entryData.result.rank) { %>

                  <span
                    ><%- entryData.result.rank %><sup
                      ><%- getOrdinalSuffix(entryData.result.rank) %></sup
                    >
                  </span>
                  <%}%>
                </div>
              </div>

              <div class="cta">
                <button
                  class="btn btn-outlined"
                  data-toggle="share_modal"
                  data-target="shareModal"
                  data-url="https://vibrer.app/app/contest-entry/<%=entryData.result.contest._id%>/<%=entryData.result._id%>"
                >
                  <%- __("share") %>
                </button>

                <% if(!loggedIn){ %>
                <button class="btn btn-primary" onclick="resdirectAfterLogin()">
                  Vote now
                </button>
                <% } else {%>

                <button
                  class="btn btn-primary submitVoteBtn<%- entryData.result.contest._id %>"
                  type="button"
                  id="submitVoteBtn<%- entryData.result.contest._id %><%- entryData.result.user._id %>"
                  onclick="addParticipateVote('<%- entryData.result.contest._id %>','<%- entryData.result.user._id %>');"
                >
                  <% if(alreadyVoted){ %> Remove vote <% } else { %> Vote now <%
                  } %>
                </button>
                <% }%>
              </div>
            </div>
          </div>
        </section>

        <!-- footer -->
        <div class="temp_footer">
          <div class="top">
            <div class="link">
              <a target="_blank" href="/imprint"><%= __("imprint") %></a>
            </div>
            <div class="link">
              <a target="_blank" href="/privacy"> <%= __("privacyPolicy") %></a>
            </div>
            <div class="link">
              <a target="_blank" href="/terms"><%= __("termsOfUse") %></a>
            </div>
            <div class="link">
              <a target="_blank" href="/cookies">
                <%= __("cookieSettings") %></a
              >
            </div>
            <div class="link">
              <a target="_blank" href="/"> <%= __("Home") %></a>
            </div>
          </div>
          <div class="social-icons">
            <a href="https://www.youtube.com/@vibrer-official" target="_blank">
              <img
                class="yti"
                src="/public/images/youtube.svg"
                alt="Youtube icon"
            /></a>
            <a
              href="https://www.instagram.com/vibrer_official/"
              target="_blank"
            >
              <img src="/public/images/instagram.svg" alt="Instagram icon"
            /></a>
          </div>

          <div class="footer-languagebar mt-3">
            <div class="app-languageSwitcher me-1">
              <div class="item" data-value="en">
                <span><%= __("English") %></span>
              </div>
              <div class="item" data-value="fr">
                <span><%= __("French") %></span>
              </div>
              <div class="item" data-value="de">
                <span><%= __("German") %></span>
              </div>
              <div class="item" data-value="it">
                <span><%= __("Italian") %></span>
              </div>
              <div class="item" data-value="pt">
                <span><%= __("Portuguese") %></span>
              </div>
              <div class="item" data-value="tr">
                <span><%= __("Turkish") %></span>
              </div>
            </div>
          </div>

          <div class="bottom">
            <%- __("copyright").replace("{year}", new Date().getFullYear()) %>
          </div>
        </div>
        <!-- app main end -->
      </div>
    </main>

    <!--  -->

    <%- include('../modals/shareModal'); %>
