<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="theme-color" content="#1e2750" />

    <meta
      name="description"
      content="Join Vibrer's prelaunch and be the first to experience a revolutionary music platform. Connect, discover, and engage with artists and music enthusiasts worldwide."
    />
    <meta
      name="keywords"
      content="music platform, music community, music discovery, artist connection, music enthusiasts"
    />
    <%- include('../partials/head'); %>
    <link
      href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/public/style/modal.css" />
    <link rel="stylesheet" href="/public/style/app.css" />
    <link rel="stylesheet" href="/public/style/contests.css" />
    <link href="https://vjs.zencdn.net/8.6.1/video-js.css" rel="stylesheet" />
  </head>
  <body class="body-dark _pr">
    <!-- loader -->
    <%- include('../partials/loader'); %>

    <!-- header -->
    <header class="app_header">
      <nav class="app_layout">
        <div class="app_start_menu">
          <!-- Logo -->
          <% if (path !== '/home') { %>
          <div class="logo" onclick="toPreHome('<%= path %>')">
            <img src="/public/images/vibrer_icon.svg" alt="Logo" />
          </div>
          <% } else { %>
          <div class="logo">
            <img src="/public/images/vibrer_icon.svg" alt="Logo" />
          </div>
          <% } %>
        </div>

        <div class="app_middle_bar force_mobile">
          <ul>
            <li
              class="<%= (path == '/home') ? 'active mdb_item' : 'mdb_item' %>"
              onclick="toPreHome('<%= path %>')"
            >
              <img src="/public/images/icons/home-icon.svg" alt="Icon" />
            </li>
            <% if(profileData.user_type === 'Artist'){ %>
            <li
              class="<%= (path == '/contest') ? 'active' : '' %>"
              onclick="toPreMyContests('<%= path %>', '<%= onGoingContestsData.result._id %>')"
            >
              <img src="/public/images/icons/contest-icon.svg" alt="Icon" />
            </li>
            <% } %>
          </ul>
        </div>

        <div class="app_right_menu">
          <div class="profile">
            <div class="head hphead">
              <img
                class="icon"
                src="/public/images/icons/user-icon-light.svg"
                alt="Icon"
              />
              <img
                src="/public/images/singer.png"
                alt="avatar"
                class="avatar"
              />
            </div>
            <div class="drop_down hpdd">
              <div class="_profile">
                <img src="/public/images/singer.png" alt="avatar" />
                <div class="name">
                  <span
                    ><%- profileData.name.first_name %><%-
                    profileData.name.last_name %></span
                  >
                  <% if(profileData.verified === true){ %>
                  <img
                    class="app_v_badge"
                    src="/public/images/icons/verified-badge.svg"
                    alt="Verified"
                  />
                  <% } %>
                </div>
                <div class="uname" id="username">
                  @<%- profileData.username %>
                </div>
              </div>

              <div class="_menu">
                <ul>
                  <li>
                    <a href="javascript:void(0)" onclick="logoutAppUser();">
                      <img src="/public/images/icons/log-off.svg" alt="Icon" />
                      <span>Logout</span>
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <main class="app_layout app_wrapper">
      <!-- main body of the app -->
      <div class="app_main preMain">
        <section class="contest-header" style="padding: 1.5rem">
          <div class="wrapper" style="position: relative; z-index: 2">
            <div>
              <div class="sponsor">
                <img src="/public/images/mod_light.svg" alt="Logo" />
                <div>MOD presents</div>
              </div>
              <div class="title"><%- onGoingContestsData.result.title %></div>
              <div class="sub">
                <%- onGoingContestsData.result.participates.length %>
                Participants â€¢ <% if (onGoingContestsData.result.endDays > 0) {
                %> Ends in <%= onGoingContestsData.result.endDays %> days <% }
                else { %> Over <%= Math.abs(onGoingContestsData.result.endDays)
                %> days before <% } %>
              </div>
            </div>
            <div class="cta">
              <button
                class="btn btn-outlined"
                data-toggle="_modal"
                data-target="contest1Info"
              >
                Learn more
              </button>
              <% if(profileData.user_type === 'Artist'){ %>
              <button
                class="btn btn-primary"
                onclick="toPreMyContests('<%= path %>','<%- onGoingContestsData.result._id %>')"
              >
                <% if (isParticipated) { %> View my Post <% } else { %>
                Participate <% } %>
              </button>
              <% } %>
              <div
                class="playAd"
                data-toggle="_modal"
                data-target="contest1Video"
              >
                <img src="/public/images/icons/playIconWhite.svg" alt="Icon" />
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>

    <%- include('../modals/contest1Info'); %>
    <!--  -->
    <%- include('../modals/contest1Video'); %>
