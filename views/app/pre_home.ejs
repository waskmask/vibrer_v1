    <script>
      var players = [];

      var videoElements = document.querySelectorAll(".video-js");

      for (var i = 0; i < videoElements.length; i++) {
        (function (index) {
          var player = videojs(videoElements[index]);

          // Store the player instance in the array
          players.push(player);

          // Add event listener to each player
          player.on("play", function () {
            pauseOtherPlayers(player);
          });
          player.on("seeking", function () {
            this.muted(true); // Use 'this' to refer to the current player instance
          });

          player.on("seeked", function () {
            this.muted(false); // Use 'this' to refer to the current player instance
          });
        })(i);
      }

      // Corrected pauseVideo function to work with an external player reference
      function pauseVideo(player) {
        if (player) {
          player.pause();
        }
      }

      // Function to pause all players except the currently playing one
      function pauseOtherPlayers(currentPlayer) {
        players.forEach(function (player) {
          if (player !== currentPlayer) {
            player.pause();
          }
        });
      }
    </script>

