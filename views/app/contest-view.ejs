    <script>
      var players = [];

      var videoElements = document.querySelectorAll(".video-js");

      for (var i = 0; i < videoElements.length; i++) {
        var player = videojs(videoElements[i]);

        // Store the player instance in the array
        players.push(player);

        // Add event listener to each player
        player.on("play", function () {
          pauseOtherPlayers(this);
        });
        player.on("seeking", function () {
          player.muted(true);
        });

        player.on("seeked", function () {
          player.muted(false);
        });
      }
      function pauseVideo() {
        player.pause();
      }
      // Function to pause all players except the currently playing one
      function pauseOtherPlayers(currentPlayer) {
        players.forEach(function (player) {
          if (player !== currentPlayer) {
            player.pause();
          }
        });
      }

      async function addParticipateVote(participate_id, contest_id) {
        const submitBtn = document.getElementById(
          "submitVoteBtn" + contest_id + participate_id + ""
        );
        const voteBtn = document.getElementById(
          "yourVote" + contest_id + participate_id + ""
        );
        const submitBtnAll = document.getElementsByClassName(
          "submitVoteBtn" + contest_id + ""
        );
        const voteBtnAll = document.getElementsByClassName(
          "yourVote" + contest_id + ""
        );
        let countVotes = document.getElementById(
          "countVotes" + contest_id + participate_id + ""
        ).innerHTML;
        let countVotesElement = document.getElementById(
          "countVotes" + contest_id + participate_id + ""
        );
        const alreadyVoted = document.getElementById(
          "alreadyVoted" + contest_id + ""
        ).value;
        submitBtn.textContent = "Loading...";
        setTimeout(async () => {
          const formData = {
            contest_id: contest_id,
            participate_id: participate_id,
          };
          const url = `${API_URL}add/contestParticipateVote`;
          try {
            const response = await fetch(url, {
              method: "POST",
              headers: {
                Authorization: `Bearer ${localStorage.getItem("appUserToken")}`,
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            const responseData = await response.json();
            if (response.status === 201 || response.status === 200) {
              if (responseData.status === 1) {
                if (response.status === 201) {
                  Array.from(submitBtnAll).forEach((btn) => {
                    btn.innerHTML = "Vote now";
                  });

                  Array.from(voteBtnAll).forEach((btn) => {
                    btn.innerHTML = "";
                  });

                  if (alreadyVoted !== "") {
                    let countVotesAlready = document.getElementById(
                      "countVotes" + contest_id + alreadyVoted + ""
                    ).innerHTML;
                    let countVotesElementAlready = document.getElementById(
                      "countVotes" + contest_id + alreadyVoted + ""
                    );
                    countVotesAlready = +countVotesAlready - 1;
                    countVotesElementAlready.innerHTML = countVotesAlready;
                  }

                  submitBtn.innerHTML = "Remove vote";
                  voteBtn.innerHTML = `<div class="yourVote">You voted</div>`;
                  countVotes = +countVotes + 1;
                  document.getElementById(
                    "alreadyVoted" + contest_id + ""
                  ).value = participate_id;
                } else {
                  submitBtn.innerHTML = "Vote now";
                  voteBtn.innerHTML = "";
                  countVotes = +countVotes - 1;
                  document.getElementById(
                    "alreadyVoted" + contest_id + ""
                  ).value = "";
                }
                countVotesElement.innerHTML = countVotes;
              } else {
              }
            } else {
            }
          } catch (err) {
            // Handle fetch error
            console.error("An error occurred", err);
          }
          // submitBtn.textContent = "Vote now";
        }, 1000);
      }

      //   Add to favourite

      async function addParticipateToFavourite(contest_id, participate_id) {
        const favouriteIcon = document.getElementById(
          "favouriteIcon" + contest_id + participate_id + ""
        );
        const favouriteBtn = document.getElementById(
          "favouriteBtn" + contest_id + participate_id + ""
        );

        // Disable the button
        favouriteBtn.disabled = true;

        setTimeout(async () => {
          const formData = {
            contest_id: contest_id,
            participate_id: participate_id,
          };
          const url = `${API_URL}addContestParticipantToFavourite`;
          try {
            const response = await fetch(url, {
              method: "POST",
              headers: {
                Authorization: `Bearer ${localStorage.getItem("appUserToken")}`,
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            const responseData = await response.json();
            if (response.status === 201 || response.status === 200) {
              if (responseData.status === 1) {
                if (response.status === 201) {
                  favouriteIcon.src = "/public/images/icons/bookmark1.svg";
                } else {
                  favouriteIcon.src = "/public/images/icons/bookmark.svg";
                }
              } else {
                if (responseData.error) {
                  responseData.message = responseData.error;
                }
              }
            } else {
              errorPop.style.display = "block";
              if (responseData.error) {
                responseData.message = responseData.error;
              }
            }
          } catch (err) {
            // Handle fetch error
            console.error("An error occurred", err);
          } finally {
            // Enable the button after the API call is complete
            favouriteBtn.disabled = false;
          }
        }, 1000);
      }
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add click event listener to the entire document
        document.addEventListener("click", function (event) {
          var reportIcon = event.target.closest(".reportIcon");
          var dropdown = event.target
            .closest(".report_dd")
            ?.querySelector(".drop_down");

          // Check if a report icon was clicked
          if (reportIcon) {
            // Toggle the active class on the corresponding dropdown
            dropdown.classList.toggle("active");
          } else if (!event.target.closest(".drop_down")) {
            // If the click was outside all dropdowns, close any active dropdown
            document
              .querySelectorAll(".drop_down.active")
              .forEach(function (activeDropdown) {
                activeDropdown.classList.remove("active");
              });
          }
        });

        // Find all elements with the class 'report_link'
        document
          .querySelectorAll(".report_link")
          .forEach(function (reportLink) {
            reportLink.addEventListener("click", function () {
              var reportId = this.getAttribute("data-id");
              if (reportId) {
                window.open(
                  "https://vibrer.com/report?id=" + reportId,
                  "_blank"
                );
              }
            });
          });
      });
    </script>
