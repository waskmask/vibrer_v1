    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var players = [];

        var videoElements = document.querySelectorAll(".video-js");
        for (var i = 0; i < videoElements.length; i++) {
          (function (i) {
            var player = videojs(videoElements[i]);

            players.push(player);

            player.on("play", function () {
              pauseOtherPlayers(player);
            });
            player.on("seeking", function () {
              this.muted(true);
            });
            player.on("seeked", function () {
              this.muted(false);
            });
          })(i);
        }

        window.pauseVideo = function () {
          players.forEach(function (player) {
            player.pause();
          });
        };

        function pauseOtherPlayers(currentPlayer) {
          players.forEach(function (player) {
            if (player !== currentPlayer) {
              player.pause();
            }
          });
        }
      });
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.addEventListener("click", function (event) {
          // First, close all dropdowns by removing the 'active' class
          document
            .querySelectorAll(".drop_down.active")
            .forEach(function (activeDropdown) {
              activeDropdown.classList.remove("active");
            });

          var reportIcon = event.target.closest(".reportIcon");

          // If a report icon was clicked, toggle the active class on its corresponding dropdown
          if (reportIcon) {
            var dropdown = reportIcon
              .closest(".report_dd")
              ?.querySelector(".drop_down");
            if (dropdown) {
              dropdown.classList.add("active"); // Use add here since we've already cleared all active classes
              event.stopPropagation(); // Prevent the event from bubbling up to the document level where it would close the dropdown immediately
            }
          }
        });

        // This additional listener ensures dropdowns close when clicking outside of them
        document.addEventListener("click", function (event) {
          if (!event.target.closest(".report_dd")) {
            document
              .querySelectorAll(".drop_down.active")
              .forEach(function (activeDropdown) {
                activeDropdown.classList.remove("active");
              });
          }
        });
      });
    </script>
    <script>
      // Set the date we're counting down to
      var countDownDate = new Date("Mar 1, 2024 23:59:59").getTime();

      // Update the count down every 1 second
      var x = setInterval(function () {
        // Get today's date and time in the Berlin timezone
        var now = new Date().toLocaleString("en-US", {
          timeZone: "Europe/Berlin",
        });
        now = new Date(now).getTime();

        // Find the distance between now and the count down date
        var distance = countDownDate - now;

        // Time calculations for days, hours, minutes, and seconds
        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor(
          (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Display the result in the elements with respective ids
        document.getElementById("days").innerHTML = days;
        document.getElementById("hours").innerHTML = hours;
        document.getElementById("minutes").innerHTML = minutes;
        document.getElementById("seconds").innerHTML = seconds;

        // If the count down is finished, write some text
        if (distance < 0) {
          clearInterval(x);
          document.getElementById("Contest1timer").innerHTML =
            "Voting Period Over";
        }
      }, 1000);
